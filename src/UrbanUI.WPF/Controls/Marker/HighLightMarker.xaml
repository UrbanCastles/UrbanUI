<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UrbanUI.WPF.Controls"
                    x:Name="highlightMarker">

    <ControlTemplate x:Key="UrbanUI.WPF.HighlightMarkerContentStyle" TargetType="{x:Type ContentControl}">
        <Grid x:Name="PART_mainGrid" Background="Transparent">
            <Border x:Name="PART_mainBorder" IsHitTestVisible="True" VerticalAlignment="Center" Background="{TemplateBinding Background}" CornerRadius="4">
                <!--<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Path=Content, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:HighlightMarker}}}"/>-->
            </Border>
        </Grid>
    </ControlTemplate>

    <Style TargetType="{x:Type ContentControl}" x:Key="UrbanUI.WPF.HighlightMarkerStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="4"/>
        <Setter Property="Template" Value="{StaticResource UrbanUI.WPF.HighlightMarkerContentStyle}"/>
    </Style>

    <Style BasedOn="{StaticResource UrbanUI.WPF.HighlightMarkerStyle}" TargetType="{x:Type local:HighlightMarker}"/>
    
</ResourceDictionary>