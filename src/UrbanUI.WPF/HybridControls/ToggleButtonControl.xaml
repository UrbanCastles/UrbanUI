<UserControl x:Class="UrbanUI.WPF.HybridControls.ToggleButtonControl"
             x:Name="ToggleButtonRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UrbanUI.WPF.HybridControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="352">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="176*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="BorderbtLeft" CornerRadius="12,0,0,12" Background="#F88379" Panel.ZIndex="1">
            <local:ImageButton x:Name="buttonLeft" Content="" Background="Transparent" FontWeight="Normal" BorderThickness="0"/>
        </Border>

        <Border x:Name="BorderbtRight" CornerRadius="0,12,12,0" Background="#E4E4E4" Panel.ZIndex="0" Grid.Column="1">
            <local:ImageButton x:Name="buttonRight" Content="" Background="Transparent" Foreground="#949494" BorderThickness="0"/>
        </Border>

    </Grid>
</UserControl>
